<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    tools:context="ie.iskill.collaborationexample.josh.JoshActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/iprt_main_logo"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"/>

    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="About: "
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="16dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/iprtlogo"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="The Irish Penal Reform Trust (IPRT) is Ireland's leading non-governmental organisation campaigning for the rights of people in prison and the progressive reform of Irish penal policy."/>
    </LinearLayout>

    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Established in 1994, IPRT has a well-established role as an independent voice in public debate on the Irish penal system."/>
    <TextView
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IPRT is committed to reducing imprisonment, respecting the rights of everyone in the penal system, and progressive reform of the penal system based on evidence-led policies. In operational terms this means our focus is on: the use of imprisonment, including sentencing; alternatives to custody and diversion; and the treatment of those in detention."/>

    <TextView
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We publish a wide range of policy positions and research documents; we campaign vigorously across a wide range of penal policy issues; and we are committed to working with other agencies in the criminal justice system to achieve penal reform."/>

   <TextView
       android:layout_marginBottom="10dp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:textColor="@color/black"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="We believe that penal reform is necessary, urgent and achievable."/>
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Donate to IPRT"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_red_square"
        android:textColor="@color/white"
        android:onClick="onDonateClick"/>

    <Button
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="iSkill"

        android:background="@drawable/button_red_square"
        android:textColor="@color/white"
        android:onClick="onIskillClick"/>
</LinearLayout>
</ScrollView>